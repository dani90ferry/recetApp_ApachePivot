<?xml version="1.0" encoding="UTF-8"?>
<ui:NuevoIngredienteDialog
	icon="/dad/recetapp/ui/images/logo.png" modal="true"
	xmlns:bxml="http://pivot.apache.org/bxml" 
	xmlns:content="org.apache.pivot.wtk.content"
	xmlns:ui="dad.recetapp.ui" 
	xmlns="org.apache.pivot.wtk">

	<FillPane>
		<TablePane>
			<columns>
				<TablePane.Column width="1*" />
			</columns>
			<TablePane.Row height="-1">
				<Form>
					<Form.Section>
						<FillPane Form.label="Cantidad">
							<TextInput bxml:id="cantidadText" prompt="cantidad" preferredWidth="230"></TextInput>
						</FillPane>
						<FillPane Form.label="Medida">
							<ListButton bxml:id="medidaListButton" preferredWidth="230"/>
						</FillPane>
						<FillPane Form.label="Tipo">
							<ListButton bxml:id="tipoListButton" preferredWidth="230"/>
						</FillPane>
					</Form.Section>
				</Form>
			</TablePane.Row>
			<TablePane.Row height="1*">
					<BoxPane styles="{horizontalAlignment:'right', verticalAlignment:'bottom'}">
						<PushButton bxml:id="anadirButton" buttonData="AÃ±adir" />
						<PushButton bxml:id="cancelarButton" buttonData="Cancelar" />
					</BoxPane>
				</TablePane.Row>
		</TablePane>
	</FillPane>
</ui:NuevoIngredienteDialog>