<?xml version="1.0" encoding="UTF-8"?>
<ui:EditarIngredienteWindow title="Editar ingrediente" maximized="true"
	xmlns:bxml="http://pivot.apache.org/bxml" xmlns:content="org.apache.pivot.wtk.content"
	xmlns:ui="dad.recetapp.ui" xmlns="org.apache.pivot.wtk">
	
	<FillPane orientation="vertical">
		<TablePane styles="{padding:8, horizontalSpacing:6}">
				<columns>
					<TablePane.Column width="-1"/>
					<TablePane.Column width="2*" />
				</columns>
				<TablePane.Row>
								<Label text="Cantidad: " styles="{verticalAlignment:'center'}" />
								<TextInput></TextInput>
				</TablePane.Row>
				<TablePane.Row>
					<Label text="    " styles="{verticalAlignment:'center'}" />
				</TablePane.Row>
				<TablePane.Row>
								<Label text="   Medida: " styles="{verticalAlignment:'center'}" />
								<ListButton listData="['Gramos','adios']" selectedIndex="0" />
				</TablePane.Row>
				<TablePane.Row>
					<Label text="    " styles="{verticalAlignment:'center'}" />
				</TablePane.Row>
				<TablePane.Row height="-2">			
								<Label text="       Tipo: " styles="{verticalAlignment:'center'}" />
								<ListButton listData="['Carne picada','adios']" selectedIndex="0" />
				</TablePane.Row>
		</TablePane>
			<BoxPane orientation="horizontal" styles="{horizontalAlignment: 'right', padding:8}">
				<PushButton bxml:id="guardarCambiosIngrediente" buttonData="Guardar cambios" />
				<PushButton bxml:id="cancelarEIngrediente" buttonData="Cancelar" />
			</BoxPane>
	</FillPane>
</ui:EditarIngredienteWindow>