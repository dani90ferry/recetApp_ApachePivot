<?xml version="1.0" encoding="UTF-8"?>
<ui:VentanaPrincipalWindow title="RecetApp"
	maximized="true" xmlns:bxml="http://pivot.apache.org/bxml"
	xmlns:content="org.apache.pivot.wtk.content" xmlns:ui="dad.recetapp.ui"
	xmlns="org.apache.pivot.wtk">
	<bxml:define>
		<Prompt bxml:id="confirmCloseTabPrompt" title="Confirm Close Tab"
			message="Really close this tab?" options="['Cancel', 'OK']"
			selectedOptionIndex="1" />
	</bxml:define>

	<BoxPane orientation="vertical">
		<TablePane styles="{padding:8, horizontalSpacing:6}">
			<columns>
				<TablePane.Column width="1*" />
				<TablePane.Column />
			</columns>

			<TablePane.Row height="1*">
				<Border styles="{padding:12}">
					<BoxPane>
						<TabPane bxml:id="tabPane">

							<BoxPane
								styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
								<TabPane.tabData>
									<content:ButtonData text="Recetas" />
								</TabPane.tabData>
								<Border styles="{padding:2}">
									<Label text="480x360" preferredWidth="480"
										preferredHeight="360"
										styles="{horizontalAlignment:'center', verticalAlignment:'center'}" />
								</Border>
							</BoxPane>

							<BoxPane
								styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
								<TabPane.tabData>
									<content:ButtonData text="CategorÃ­as" />
								</TabPane.tabData>
								<Border styles="{padding:2}">
									<Label text="480x360" preferredWidth="480"
										preferredHeight="360"
										styles="{horizontalAlignment:'center', verticalAlignment:'center'}" />
									<bxml:include src="VentanaPrincipalWindow_Categorias.bxml" />
								</Border>
							</BoxPane>

							<BoxPane
								styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
								<TabPane.tabData>
									<content:ButtonData text="Ingredientes" />
								</TabPane.tabData>
								<Border styles="{padding:2}">
									<Label text="480x360" preferredWidth="480"
										preferredHeight="360"
										styles="{horizontalAlignment:'center', verticalAlignment:'center'}" />
									<bxml:include src="VentanaPrincipalWindow_Ingredientes.bxml" />
								</Border>
							</BoxPane>

							<BoxPane
								styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
								<TabPane.tabData>
									<content:ButtonData text="Medidas" />
								</TabPane.tabData>
								<Border styles="{padding:2}">
									<bxml:include src="VentanaPrincipalWindow_Medidas.bxml" />
								</Border>
							</BoxPane>

							<BoxPane
								styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
								<TabPane.tabData>
									<content:ButtonData text="Anotaciones" />
								</TabPane.tabData>
								<Border styles="{padding:2}">
									<bxml:include src="VentanaPrincipalWindow_Anotaciones.bxml" />
								</Border>
							</BoxPane>
						</TabPane>
					</BoxPane>
				</Border>
			</TablePane.Row>
		</TablePane>
		<BoxPane>
			<Label text="Recetas:" styles="{verticalAlignment:'center'}" />
		</BoxPane>
	</BoxPane>
</ui:VentanaPrincipalWindow>